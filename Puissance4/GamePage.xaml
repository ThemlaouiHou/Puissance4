<Page x:Class="Puissance4.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Puissance4"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GamePage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row 0: Main Menu Button -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Menu Bar -->
            <RowDefinition Height="*"/>
            <!-- Row 2: Game content -->
        </Grid.RowDefinitions>

        <!-- Row 0: Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="Game">
                <MenuItem x:Name="MIResetGame" Header="Reset Game" Click="MIResetGame_Click"/>
            </MenuItem>
            <MenuItem x:Name="MIAbout" Header="About" Click="MIAbout_Click"/>
        </Menu>

        <!-- Row 1: Top buttons and matchup info -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10">
            <Button Content="⬅ Main Menu"
                Style="{StaticResource MenuButton}"
                Width="130"
                Height="35"
                Click="MainMenu_Click"/>
            
            <!-- Matchup Display -->
            <Border Background="LightGray" 
                    CornerRadius="5" 
                    Padding="15,8" 
                    Margin="20,0,0,0"
                    BorderBrush="Gray" 
                    BorderThickness="1">
                <TextBlock x:Name="MatchupLabel" 
                           Text="{Binding MatchupText}" 
                           FontWeight="Bold" 
                           FontSize="14"
                           Foreground="DarkBlue"/>
            </Border>
        </StackPanel>

        <!-- Row 2: Game area -->
        <Grid Grid.Row="2">
            <Canvas x:Name="FireworkCanvas" IsHitTestVisible="False" Panel.ZIndex="2"/>
            <Viewbox Stretch="Uniform" Panel.ZIndex="1">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                    <UniformGrid x:Name="ArrowPanel" Rows="1" Columns="7" Margin="10"/>
                    <Grid Width="560" Height="480" Margin="10">
                        <Canvas x:Name="AnimationCanvas" IsHitTestVisible="False" Panel.ZIndex="1"/>
                        <Border Background="#0077CC" CornerRadius="10" Padding="5">
                            <Grid x:Name="GameGrid"/>
                        </Border>
                    </Grid>
                    <TextBlock x:Name="StatusLabel"
                           Text="{Binding StatusText}"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="10"
                           HorizontalAlignment="Center"/>
                    <Button x:Name="ReplayButton"
                        Style="{StaticResource ReplayButtonStyle}"
                        Visibility="{Binding ReplayButtonVisibility}"
                        Click="ReplayButton_Click"/>
                </StackPanel>
            </Viewbox>
        </Grid>
    </Grid>

</Page>
